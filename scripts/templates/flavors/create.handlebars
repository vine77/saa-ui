<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3>Flavor Creator</h3>
</div>
<form {{action "createFlavor" on="submit"}}>
  <div class="modal-body">
    <p>Create a new flavor with an attached SLA based on an existing flavor.</p>
    <div class="form-horizontal well-clean shadow-lifted">
      <div class="control-group">
        <label class="control-label">Flavor name:</label>
        <div class="controls">
          {{view Ember.TextField placeholder="" valueBinding="name" autofocus="autofocus"}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Clone from:</label>
        <div class="controls">
          {{view Ember.Select viewName="select"
            contentBinding="flavorsWithoutSlas"
            optionValuePath="content.id"
            optionLabelPath="content.name"
            selectionBinding="sourceFlavor"
          }}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">SLA:</label>
        <div class="controls">
          {{view Ember.Select viewName="select"
            contentBinding="slas"
            optionValuePath="content.id"
            optionLabelPath="content.name"
            selectionBinding="sla"
          }}
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a class="btn" data-dismiss="modal">Cancel</a>
    {{#if isFlavorCreating}}
      <a class="btn btn-primary" disabled>Save</a>
    {{else}}
      <input class="btn btn-primary" type="submit" value="Save">
    {{/if}}
  </div>
</form>
