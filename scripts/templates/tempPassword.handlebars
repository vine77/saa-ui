<div id="tempPassword" class="container">
    {{#if message}}
     <div id="tempPassword-notification" class="notification">
       <div class="alert">
         <button type="button" class="close" {{action "removeNotification"}}>&times;</button>
         {{message}}
       </div>
     </div>
    {{/if}}
    <div class="portlet" style="float:none; margin:20px auto;">
        <div class="header" style="text-align:left;">Generate Temporary Password</div>
        <form>
            <label for="inputUsername"><small>Username</small></label>
                <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                {{view Ember.TextField valueBinding="username" id="tempPassword-username" placeholder="Username" autofocus="autofocus"}}
            </div>
            <div class="form-actions" style="margin:20px -19px -39px; border-bottom-right-radius: 3px; border-bottom-left-radius: 3px;">
                <button class="btn btn-primary" {{action "generate_password"}}>Generate</button>
            </div>
        </form>
    </div>
</div>
