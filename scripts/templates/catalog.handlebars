<div class="notification">
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    This screen is in development and has not been integrated with an API.
  </div>
</div>
<div id="catalog">
  <div class="row-fluid">
    <div class="content">
      <div class="header row-fluid">
        <div class="actions">
          <a class="btn disabled"><i class="icon-plus"></i> Upload Template</a>
        </div>
        <form id="filter-form" class="input-prepend clear-input pull-right">
          <span class="add-on"><i class="icon-search"></i></span>
          {{view Ember.TextField id="filter" type="search" valueBinding="filterQuery" placeholder="Filter templates"}}
          <a class="close clear-button" type="reset" {{action "clearFilter"}}>&times;</a>
        </form>
      </div>
      <table class="table table-bordered expandable">
        <thead>
          <tr>
            <th class="column-small"><a {{action "selectAll"}} title="Select all"><i class="icon-check icon-large"></i></a></th>
            <th {{bindAttr class=":sortable isColumn2Sorted:sorted sortAscending"}}><a {{action "sortModel" "name"}}>Template Name</a></th>
            <th {{bindAttr class=":sortable isColumn3Sorted:sorted sortAscending"}}><a {{action "sortModel" "version"}}>Version</a></th>
            <th {{bindAttr class=":sortable isColumn4Sorted:sorted sortAscending"}}><a {{action "sortModel" "description"}}>Description</a></th>
            <th {{bindAttr class=":sortable isColumn5Sorted:sorted sortAscending"}}><a {{action "sortModel" "numberOfVms"}}># of VMs</a></th>
            <th>Actions</th>
            <th class="column-small"></th>
          </tr>
        </thead>
        <tbody>
          {{#each template in controller}}
            <tr {{bindAttr class="template.isSelected template.isExpanded"}}>
              <td class="column-small">{{view Ember.Checkbox checkedBinding="template.isSelected"}}</td>
              <td><a {{action "expand" template}}>{{template.name}}</a></td>
              <td class="nowrap">{{template.version}}</td>
              <td>{{template.description}}</td>
              <td>{{template.numberOfVms}}</td>
              <td>
                <div class="btn-group">
                  <button class="btn btn-mini disabled"><i class="icon-fighter-jet"></i> Launch service</button>
                  <button data-toggle="dropdown" class="btn dropdown-toggle btn-mini"><span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <li><a class="disabled"><i class="icon-pencil"></i> Edit template</a></li>
                  </ul>
                </div>
              </td>
              <td class="column-small"><a class="btn btn-mini toggle-details" {{action "expand" template}}><i {{bindAttr class="template.isActive:icon-minus:icon-plus"}}></i></a></td>
            </tr>
            <tr class="expandable-row">
              <td colspan="100%">
                <div class="details">
                  <ul class="nav nav-tabs">
                    <li class="active"><a onclick="App.selectTab(event)">VMs</a></li>
                  </ul>
                  <div class="tab-content">
                    <div class="tab-pane vms active">
                      <ul>
                        {{#each vm in template.vms}}
                          <li>{{vm.name}}</li>
                        {{/each}}
                      </ul>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
