<div id="trust">
  <div class="header">
    <h3>Controller Settings</h3>
  </div>
  <form class="form-horizontal well-clean shadow-lifted">
    <section id="uninstall-trust-server">
      <legend>Reset Controller</legend>
      <p class="text-warning"> Warning: Resetting the controller may result in an unavailable UI for a duration of time, and depending on your network configuration the UI IP may change. </p>

      <dl class="dl-horizontal">
        {{#unless isActionPending}}
          <button class="btn btn-danger" {{action "reset"}}>Reset Controller</button>
        {{else}}
          <button class="btn btn-danger" disabled="disabled"><i class="icon-spinner icon-spin"></i> Resetting Controller...</button>
        {{/unless}}
      </dl>
    </section>
  </form>

  <form class="form-horizontal well-clean shadow-lifted">
    <section id="uninstall-trust-server">
      <legend>Shutdown Controller</legend>
      <p class="text-warning"> Warning: Shutting down the controller may result in an unavailable UI. </p>
      
      <dl class="dl-horizontal">
        {{#unless isActionPending}}
          <button class="btn btn-danger" {{action "shutdown"}}>Shutdown Controller</button>
        {{else}}
          <button class="btn btn-danger" disabled="disabled"><i class="icon-spinner icon-spin"></i> Shutting Down Controller...</button>
        {{/unless}}
      </dl>
    </section>
  </form>
</div>
