<div class="progress float-left" {{bind-attr style=styles}}>
  <span style="position:absolute; bottom:55%; left:0px;">
    <span style="font-size:0.7em">0</span>
  </span>
  <div class="bar bar-success" {{bind-attr style=barRange1PercentageWidth}}></div>
  <div class="bar bar-warning" {{bind-attr style=barRange2PercentageWidth}}></div>
  <div class="bar bar-danger" {{bind-attr style=barRange3PercentageWidth}}></div>
  <span style="position:absolute; bottom:55%; right:0px;">
    <span style="font-size:0.7em">{{thresholdMax}}</span>
  </span>
  <span {{bind-attr style=currentValueStyles}}>
    <span style="font-size:0.7em"> {{value}} </span>
  </span>
</div>


