<section id="upload">
  <h3>Configuration Overrides</h3>
  <div class="well-clean shadow-lifted">
    {{#if configurationValuesExist}}
      <form id="overridesForm" class="form-horizontal">
        {{#each config in model.configurationValues itemController="override"}}
          <div class="control-group">
            <label class="control-label">{{config.model.name}}</label>
            <div class="controls">
              {{input type="text" value=config.model.value disabled=config.isDisabled size="50" placeholder=placeholder}}
              <label class="checkbox" style="vertical-align:middle; display:inline-block;">
                {{input type="checkbox" value=config.model.value name="isAdmin" checked=config.isDefault}}
                Use Default
              </label>
            </div>
          </div>
        {{/each}}
        <div class="control-group">
          <div class="controls">
            <a class="btn btn-primary" {{action updateOverrides}}>Submit</a>
            <i id="overridesLoading" class="loading hide"></i>
          </div>
        </div>
      </form>
    {{else}}
      No configuration override values were found.
    {{/if}}
  </div>
</section>
