<section id="network">
  <h3>Network</h3>
  <form class="form-horizontal well-clean shadow-lifted">
    <div class="control-group">
      <label class="control-label">Network Type:</label>
      <div class="controls">
        <input type="text" disabled {{bind-attr value="networkTypeText"}}>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Gateway:</label>
      <div class="controls">
        {{input placeholder="Gateway" value=App.network.route.gateway}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Hostname:</label>
      <div class="controls">
        {{input placeholder="Hostname" value=App.network.other.hostname}}
      </div>
    </div>
    <section>
      <legend>External Interface</legend>
      <div class="control-group">
        <label class="control-label">MAC Address:</label>
        <div class="controls">
          <input type="text" class="mac" disabled {{bind-attr value="App.network.external.mac"}}>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Configure IPv4:</label>
        <div class="controls">
          <label class="checkbox">
            {{input type="checkbox" class="dhcp" checked=App.network.external.dhcp}}
            Using DHCP
          </label>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">DNS Servers:</label>
        <div class="controls">
          {{input class="input-medium" placeholder="Name server 1" value=App.network.dns.ns1 disabledBinding="App.network.external.dhcp"}}
          {{input class="input-medium" placeholder="Name server 2" value=App.network.dns.ns2 disabledBinding="App.network.external.dhcp"}}
          {{input class="input-medium" placeholder="Name server 3" value=App.network.dns.ns3 disabledBinding="App.network.external.dhcp"}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">IPv4 Address:</label>
        <div class="controls">
          {{input class="address" placeholder="IP address" value=App.network.external.address disabledBinding="App.network.external.dhcp"}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Subnet Mask:</label>
        <div class="controls">
          {{input class="netmask" placeholder="Netmask" value=App.network.external.netmask disabledBinding="App.network.external.dhcp"}}
        </div>
      </div>
    </section>
    <section>
      <legend>Management Interface</legend>
      <div class="control-group">
        <label class="control-label">MAC Address:</label>
        <div class="controls">
          <input type="text" class="mac" disabled {{bind-attr value="App.network.management.mac"}}>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Configure IPv4:</label>
        <div class="controls">
          <label class="checkbox">
            {{input type="checkbox" class="dhcp" checked=App.network.management.dhcp}}
            Using DHCP
          </label>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">IPv4 Address:</label>
        <div class="controls">
          {{input class="address" placeholder="IP adress" value=App.network.management.address disabledBinding="App.network.management.dhcp"}}
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Subnet Mask:</label>
        <div class="controls">
          {{input class="netmask" placeholder="Netmask" value=App.network.management.netmask disabledBinding="App.network.management.dhcp"}}
        </div>
      </div>
    </section>
    {{#if networkOverridesExist}}
      <section>
        <legend>Network Configuration Overrides</legend>
        {{#each config in networkOverrides itemController="override"}}
          <div class="control-group">
            <label class="control-label">{{config.model.name}}</label>
            <div class="controls">
              {{input type="text" value=config.model.value disabled=config.isDisabled size="50" placeholder=placeholder}}
              <label class="checkbox" style="vertical-align:middle; display:inline-block;">
                {{input type="checkbox" value=config.model.value name="isAdmin" checked=config.isDefault}}
                Use Default
              </label>
            </div>
          </div>
        {{/each}}
      </section>
    {{/if}}
    <div class="form-actions">
      {{#unless isActionPending}}
        <a class="btn" {{action "cancel"}}>Cancel</a>
        <button type="submit" class="btn btn-primary" {{action "save"}}>Save</button>
      {{else}}
        <a class="btn btn-primary" disabled="disabled"><i class="icon-spinner icon-spin"></i> Saving...</a>
      {{/unless}}
    </div>
  </form>
</section>
