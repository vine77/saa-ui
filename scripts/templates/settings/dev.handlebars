<div id="dev">
  <h3>Development Settings</h3>
  <form class="form-horizontal well-clean shadow-lifted">
    <div class="control-group">
      <label class="control-label">API domain or IP address:</label>
      <div class="controls">
        {{view Ember.TextField placeholderBinding="currentDomain" valueBinding="apiDomain"}}
        <button class="btn" {{action clear}}>Reset to default</button>
      </div>
    </div>
    <div class="form-actions">
      <input type="submit" class="btn btn-primary" value="Save" {{action save}}>
      <i class="loading hide"></i>
    </div>
  </form>
</div>
