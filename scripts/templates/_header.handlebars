<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <div class="brand">
        <img id="logo-company" src="images/logo-intel-white.svg" alt="Intel">
        <div class="application-title">
          {{App.application.title}}
          <div class="full-title">{{App.application.longTitle}}</div>
        </div>
      </div>
      {{#if loggedIn}}
        <nav class="nav-collapse collapse pull-right">
          <ul class="nav">
            <li>{{#link-to "dashboard"}}<i class="icon-th"></i>Dashboard{{/link-to}}</li>
            {{#if App.application.isEnabled}}
              <li>{{#link-to "nodes"}}<i class="icon-cloud"></i>Nodes{{/link-to}}</li>
              <li>{{#link-to "vms"}}<i class="icon-desktop"></i>VMs{{/link-to}}</li>
              <li class="dropdown">
                {{#link-to "services" class="dropdown-toggle"}}<i class="icon-tasks"></i>Services{{/link-to}}
                <ul class="dropdown-menu">
                  <li>{{#link-to "flavors"}}Flavors{{/link-to}}</li>
                  <li>{{#link-to "slas"}}SLAs{{/link-to}}</li>
                </ul>
              </li>
              {{#if App.mtWilson.isSupported}}
                <li class="dropdown">
                  {{#link-to "trust" class="dropdown-toggle"}}<i class="icon-lock"></i>Trust{{/link-to}}
                  {{#if isMtWilsonInstalled}}
                    <ul class="dropdown-menu">
                      <li>{{#link-to "trust.mles"}}MLEs{{/link-to}}</li>
                    </ul>
                  {{/if}}
                </li>
              {{/if}}
            {{else}}
              <li><a class="disabled"><i class="icon-cloud"></i>Nodes</a></li>
              <li><a class="disabled"><i class="icon-desktop"></i>VMs</a></li>
              <li><a class="disabled"><i class="icon-tasks"></i>Services</a></li>
            {{/if}}
            <li class="dropdown">
              {{#link-to "settings"}}<i class="icon-cog"></i>Settings{{/link-to}}
              <ul class="dropdown-menu">
                <li>{{#link-to "settings.upload"}}Upload{{/link-to}}</li>
                <li>{{#link-to "settings.network"}}Network{{/link-to}}</li>
                <li>{{#link-to "settings.mailserver"}}Mail Server{{/link-to}}</li>
                {{#if App.application.isEnabled}}
                  <li>{{#link-to "settings.users"}}Users{{/link-to}}</li>
                  <li>{{#link-to "settings.log"}}Logs{{/link-to}}</li>
                {{/if}}
                <li>{{#linkTo "settings.trust"}}Trust{{/linkTo}}</li>
              </ul>
            </li>
          </ul>
        </nav>
        <ul class="account">
          <li>
            <a {{bindAttr href="horizonUrl"}} target="_blank">
              Tenant interface (Horizon) <i class="icon-external-link icon-small"></i>
            </a>
          </li>
          <li>Logged in as <em>{{App.session.username}}</em></li>
          <li><a href="#" {{action logout}}><i class="icon-signout"></i>Log Out</a></li>
        </ul>
      {{/if}}
      {{render "status"}}
    </div>
  </div>
</header>
