<div class="modal hide fade" id="modal" data-backdrop="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>VM Trust Report ({{view.content.vmTrustReport.vmName}}) </h3>
  </div>
  <div class="modal-body">
    <table class="table table-bordered">
      <tr>
        <th class="column-small">Trust Status</th>
        <th>Trust Details</th>
        <th>Node</th>
        <th>Timestamp</th>
      </tr>
      {{#each attestation in view.content.vmTrustReport.vmAttestations}}
        <tr>
          <td class="column-small">{{trustIcon attestation.vmAttestationNode.trustStatus}} {{trust attestation.vmAttestationNode.trustStatus}}</td>
          <td>{{attestation.vmAttestationNode.reportMessage}}</td>
          <td>{{attestation.vmAttestationNode.nodeName}}</td>
          <td>{{timestamp attestation.vmAttestationNode.attestationTime}}</td>
        </tr>
      {{/each}}
    </table>
  </div>
  <div class="modal-footer">
    <button class="btn" {{action "modalHide" target="view"}}> Close </button>
    <button class="btn btn-primary" {{action "exportTrustReport" view.content target="controller"}}> Export as PDF </button>
  </div>
</div>
